<!--<RelativeLayout-->
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/clMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/app_background_color">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:visibility="visible">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Widget.MyApp.ActionBar"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:animateLayoutChanges="true"
            android:background="@android:color/transparent"
            android:contentInsetEnd="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetRight="0dp"
            android:contentInsetStart="0dp"
            android:visibility="visible"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin">

            <RelativeLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rlBack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/ivBack"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_back"
                        android:visibility="visible"/>

                    <TextView
                        android:id="@+id/tvBack"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/ivBack"
                        android:layout_toRightOf="@+id/ivBack"
                        android:gravity="center_vertical"
                        android:text="Home"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="invisible"/>


                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/activity_main_truck_entry"
                        android:textColor="@color/text_color_white"
                        android:textSize="@dimen/text_size_medium"/>
                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvSubmit">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_small"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:orientation="horizontal"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/tvParty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_party"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/text_size_extra_small"/>
                    <TextView
                        android:id="@+id/tvSelectParty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="@dimen/activity_margin_small"
                        android:paddingLeft="@dimen/activity_margin"
                        android:paddingRight="@dimen/activity_margin"
                        android:paddingTop="@dimen/activity_margin_small"
                        android:text="@string/activity_truck_number_select"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/text_size_extra_small"/>
                    <EditText
                        android:id="@+id/etParty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvParty"
                        android:layout_toLeftOf="@+id/tvSelectParty"
                        android:layout_toStartOf="@+id/tvSelectParty"
                        android:background="@drawable/edittext_underline"
                        android:enabled="false"
                        android:textSize="@dimen/text_size_medium"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvLrNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:inputType="number"
                    android:text="@string/activity_lr_no"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_extra_small"/>
                <EditText
                    android:id="@+id/etLrNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_small"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:background="@drawable/edittext_underline"
                    android:inputType="textCapCharacters"
                    android:textSize="@dimen/text_size_medium"/>
                <TextView
                    android:id="@+id/tvWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:text="@string/activity_weight"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_extra_small"/>
                <EditText
                    android:id="@+id/etWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_small"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:background="@drawable/edittext_underline"
                    android:inputType="number"
                    android:textSize="@dimen/text_size_medium"/>
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:text="@string/activity_date"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_extra_small"/>
                <EditText
                    android:id="@+id/etDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_small"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:background="@drawable/edittext_underline"
                    android:focusable="false"
                    android:textSize="@dimen/text_size_medium"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_small"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:orientation="horizontal"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/tvTruckNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_truck_no"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/text_size_extra_small"/>
                    <TextView
                        android:id="@+id/tvSelectTruckNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="@dimen/activity_margin_small"
                        android:paddingLeft="@dimen/activity_margin"
                        android:paddingRight="@dimen/activity_margin"
                        android:paddingTop="@dimen/activity_margin_small"
                        android:text="@string/activity_truck_number_select"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/text_size_extra_small"/>
                    <EditText
                        android:id="@+id/etTruckNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvTruckNo"
                        android:layout_toLeftOf="@+id/tvSelectTruckNumber"
                        android:layout_toStartOf="@+id/tvSelectTruckNumber"
                        android:background="@drawable/edittext_underline"
                        android:enabled="false"
                        android:textSize="@dimen/text_size_medium"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_small"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:orientation="horizontal"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/tvDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/activity_destination"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/text_size_extra_small"/>
                    <TextView
                        android:id="@+id/tvSelectDestination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="@dimen/activity_margin_small"
                        android:paddingLeft="@dimen/activity_margin"
                        android:paddingRight="@dimen/activity_margin"
                        android:paddingTop="@dimen/activity_margin_small"
                        android:text="@string/activity_truck_number_select"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/text_size_extra_small"/>

                    <EditText
                        android:id="@+id/etDestination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvDestination"
                        android:layout_toLeftOf="@+id/tvSelectDestination"
                        android:background="@drawable/edittext_underline"
                        android:enabled="false"
                        android:inputType="textCapCharacters"
                        android:textSize="@dimen/text_size_medium"
                        android:visibility="visible"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/tvCompanyRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:text="@string/activity_company_rate"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_extra_small"/>
                <EditText
                    android:id="@+id/etCompanyRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_small"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:background="@drawable/edittext_underline"
                    android:enabled="false"
                    android:inputType="number"
                    android:textSize="@dimen/text_size_medium"/>
                <TextView
                    android:id="@+id/tvBillRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:text="@string/activity_bill_rate"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_extra_small"/>
                <EditText
                    android:id="@+id/etBillRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_small"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:background="@drawable/edittext_underline"
                    android:inputType="number"
                    android:textSize="@dimen/text_size_medium"/>
                <TextView
                    android:id="@+id/tvDeliveryNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:text="@string/activity_delivery_no"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_extra_small"/>
                <EditText
                    android:id="@+id/etOrderNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_small"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:background="@drawable/edittext_underline"
                    android:inputType="textCapCharacters"
                    android:textSize="@dimen/text_size_medium"/>
                <TextView
                    android:id="@+id/tvInvoiceNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:text="@string/activity_invoice_no"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_extra_small"/>
                <EditText
                    android:id="@+id/etInvoiceNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_small"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:background="@drawable/edittext_underline"
                    android:inputType="textCapCharacters"
                    android:textSize="@dimen/text_size_medium"/>
                <TextView
                    android:id="@+id/tvCashAdvance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:text="@string/activity_cash_advance"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_extra_small"/>
                <EditText
                    android:id="@+id/etCashAdvance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_small"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:background="@drawable/edittext_underline"
                    android:inputType="number"
                    android:textSize="@dimen/text_size_medium"/>
                <TextView
                    android:id="@+id/tvDieselAdvance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:text="@string/activity_diesel_advance"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_extra_small"/>
                <EditText
                    android:id="@+id/etDieselAdvance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_small"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:background="@drawable/edittext_underline"
                    android:inputType="number"
                    android:textSize="@dimen/text_size_medium"/>
                <TextView
                    android:id="@+id/tvTotalAdvance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:text="@string/activity_total_advance"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_extra_small"/>
                <EditText
                    android:id="@+id/etTotalAdvance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_small"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:background="@drawable/edittext_underline"
                    android:enabled="false"
                    android:inputType="number"
                    android:textSize="@dimen/text_size_medium"/>
                <TextView
                    android:id="@+id/tvTotalCompanyBilling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:text="@string/activity_total_company_billing"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_extra_small"/>
                <EditText
                    android:id="@+id/etTotalCompanyBilling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_small"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:background="@drawable/edittext_underline"
                    android:inputType="number"
                    android:textSize="@dimen/text_size_medium"/>
                <TextView
                    android:id="@+id/tvTotalBhada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:layout_marginTop="@dimen/activity_margin_small"
                    android:text="@string/activity_total_bhada"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_extra_small"/>
                <EditText
                    android:id="@+id/etTotalBhada"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_small"
                    android:layout_marginLeft="@dimen/activity_margin"
                    android:layout_marginRight="@dimen/activity_margin"
                    android:background="@drawable/edittext_underline"
                    android:inputType="number"
                    android:textSize="@dimen/text_size_medium"/>
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_margin_small"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_marginTop="@dimen/activity_margin_small"
            android:background="@drawable/button_bg"
            android:elevation="@dimen/button_elevation"
            android:gravity="center"
            android:padding="@dimen/activity_button"
            android:text="@string/activity_login_button_submit"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_medium"/>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
    <!--</RelativeLayout>-->
